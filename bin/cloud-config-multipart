#!/usr/bin/env node

var multipart = require('../index')

multipart(process.argv.slice(2))
  .then(function(stream) {
    stream.on('data', function(d) {
      console.log(d.toString())
    })
  })
  .catch(function(err) {
    console.error(err)
    process.exit(1)
  })

